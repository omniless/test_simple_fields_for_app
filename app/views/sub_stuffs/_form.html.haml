= form_for @sub_stuff do |f|
  - if @sub_stuff.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sub_stuff.errors.count, "error")} prohibited this sub_stuff from being saved:"
      %ul
        - @sub_stuff.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
